<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/drawButton"
        android:text="Draw from Deck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:contentDescription="First Train Card"
            android:id="@+id/trainCard1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />
        <ImageView
            android:contentDescription="Second Train Card"
            android:id="@+id/trainCard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />
        <ImageView
            android:contentDescription="Third Train Card"
            android:id="@+id/trainCard3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />
        <ImageView
            android:contentDescription="Fourth Train Card"
            android:id="@+id/trainCard4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />
        <ImageView
            android:contentDescription="Fifth Train Card"
            android:id="@+id/trainCard5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    </ScrollView>


</LinearLayout>
